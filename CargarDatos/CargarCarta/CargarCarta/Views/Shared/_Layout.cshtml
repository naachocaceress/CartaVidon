<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vidón Bar</title>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CargarCarta.styles.css" asp-append-version="true" />

</head>
<body>

    <header class="p-3" style="background-color: #0C8444; z-index: 9; left: 0; right: 0; ">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-between" style="height: 50px;">

                <div class="d-flex align-items-center justify-content-center flex-grow-1">
                    <a href="https://www.instagram.com/vidonbar/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                        <img src="../img/Vidon bar ORIGINAL.png" alt="logo" style="width: 60px;">
                    </a>

                    <div class="text-end">
                        <h3 class="float-md-start mb-0" style="color: white;">VIDÓN BAR</h3>
                    </div>
                </div>

                <ul class="navbar-nav text-center">
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="btn btn-outline-warning no-scale" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration:none; color: #fdc030; ">Nacho</a>
                            <ul class="dropdown-menu mt-2">
                                <li><a class="dropdown-item">Cerrar sesion</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>

            </div>
            <hr />
            <span class="sucursal" style="color: #fdc030;">

            </span>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #f4f4f4; padding: 10px; text-align: center; width: 100%; position: absolute; bottom: 0;">
        <span class="version" style="font-style: italic;">Carta - Beta 0.1</span>&nbsp;<span class="brand" style="font-weight: bold;">&copy;Vidónbar</span>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
